<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.QuizEndActivity">

    <include android:id="@+id/layoutActionBar"
        layout="@layout/top_bar_layout"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/layoutQuizHolder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/horizontal_margin"
        android:layout_marginTop="@dimen/margin_top"
        android:elevation="5dp"
        app:cardBackgroundColor="@color/main_color"
        app:cardCornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutActionBar"
        app:strokeWidth="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="15dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textQuiz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/f_b"
                android:includeFontPadding="false"
                tools:text="25 - 23 = ?"
                android:textColor="@color/white"
                android:textSize="25sp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/layoutQuizHolder"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="7.5dp"
            android:orientation="horizontal">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textAns1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_anser_r_10"
                android:fontFamily="@font/f_b"
                android:layout_marginHorizontal="7.5dp"
                android:textAlignment="center"
                android:includeFontPadding="false"
                android:paddingVertical="15dp"
                android:layout_weight="1"
                android:textColor="@color/main_color"
                android:textSize="20sp"
                tools:text="1" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textAns2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_anser_r_10"
                android:fontFamily="@font/f_b"
                android:layout_marginHorizontal="7.5dp"
                android:textAlignment="center"
                android:layout_weight="1"
                android:includeFontPadding="false"
                android:paddingVertical="15dp"
                android:textColor="@color/main_color"
                android:textSize="20sp"
                tools:text="2" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="7.5dp"
            android:orientation="horizontal">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textAns3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_anser_r_10"
                android:fontFamily="@font/f_b"
                android:layout_marginHorizontal="7.5dp"
                android:textAlignment="center"
                android:includeFontPadding="false"
                android:paddingVertical="15dp"
                android:layout_weight="1"
                android:textColor="@color/main_color"
                android:textSize="20sp"
                tools:text="3" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textAns4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_anser_r_10"
                android:fontFamily="@font/f_b"
                android:layout_marginHorizontal="7.5dp"
                android:textAlignment="center"
                android:layout_weight="1"
                android:includeFontPadding="false"
                android:paddingVertical="15dp"
                android:textColor="@color/main_color"
                android:textSize="20sp"
                tools:text="4" />



        </LinearLayout>

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonSubmitAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top"
        android:backgroundTint="@color/main_color"
        android:fontFamily="@font/f_b"
        android:includeFontPadding="false"
        android:insetTop="0dp"
        android:layout_marginBottom="15dp"
        android:insetBottom="0dp"
        android:paddingHorizontal="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/layoutBottomHolder"
        android:text="@string/submit_answer"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/layoutBottomHolder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="visible">

        <include
            android:id="@+id/layoutBottom"
            layout="@layout/small_2_image_layout" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>