                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imageDictionary">

                <include android:id="@+id/layoutBigBottom"
                    layout="@layout/small_2_image_layout"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutSetting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="@dimen/horizontal_margin"
                android:background="@drawable/bg_main_color_100_r"
                android:paddingVertical="13dp"
                app:layout_constraintBottom_toBottomOf="@id/imageSetting"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/imageSetting"
                app:layout_constraintTop_toTopOf="@id/imageSetting">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="45dp"
                    android:fontFamily="@font/f_b"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:includeFontPadding="false"
                    android:text="@string/setting"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/imageSetting"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="@dimen/horizontal_margin"
                android:layout_marginVertical="@dimen/margin_top"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="35dp"
                app:cardElevation="2dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layoutBigBottomHolder"
                app:layout_constraintBottom_toBottomOf="parent"
                app:strokeWidth="0dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="15dp"
                    android:src="@drawable/ic_setting" />

            </com.google.android.material.card.MaterialCardView>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>