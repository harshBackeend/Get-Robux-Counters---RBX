<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color_2"
    tools:context=".view.SettingActivity">

    <include
        android:id="@+id/layoutActionBar"
        layout="@layout/top_bar_layout" />

    <LinearLayout
        android:id="@+id/layoutShareApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="@dimen/horizontal_margin"
        android:background="@drawable/bg_main_color_100_r"
        android:paddingVertical="13dp"
        app:layout_constraintBottom_toBottomOf="@id/imageShareApp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/imageShareApp"
        app:layout_constraintTop_toTopOf="@id/imageShareApp">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:fontFamily="@font/f_b"
            android:includeFontPadding="false"
            android:text="@string/share_app"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/imageShareApp"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="@dimen/horizontal_margin"
        android:layout_marginTop="@dimen/margin_top"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="35dp"
        app:cardElevation="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutActionBar"
        app:strokeWidth="0dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:src="@drawable/ic_se_share_app" />

    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:id="@+id/layoutRateApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="@dimen/horizontal_margin"
        android:background="@drawable/bg_main_color_100_r"
        android:paddingVertical="13dp"
        app:layout_constraintBottom_toBottomOf="@id/imageRateApp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/imageRateApp"
        app:layout_constraintTop_toTopOf="@id/imageRateApp">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:fontFamily="@font/f_b"
            android:includeFontPadding="false"
            android:text="@string/rate_app"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/imageRateApp"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="@dimen/horizontal_margin"
        android:layout_marginTop="@dimen/margin_top"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="35dp"
        app:cardElevation="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageShareApp"
        app:strokeWidth="0dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:src="@drawable/ic_new_rate_app" />

    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:id="@+id/layoutPrivacyPolicy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="@dimen/horizontal_margin"
        android:background="@drawable/bg_main_color_100_r"
        android:paddingVertical="13dp"
        app:layout_constraintBottom_toBottomOf="@id/imagePrivacyPolicy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/imagePrivacyPolicy"
        app:layout_constraintTop_toTopOf="@id/imagePrivacyPolicy">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:fontFamily="@font/f_b"
            android:includeFontPadding="false"
            android:text="@string/privacy_policy"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/imagePrivacyPolicy"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="@dimen/horizontal_margin"
        android:layout_marginTop="@dimen/margin_top"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="35dp"
        app:cardElevation="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageRateApp"
        app:strokeWidth="0dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:src="@drawable/ic_new_privacy_policy" />

    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:id="@+id/layoutBigHolder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <include
            android:id="@+id/layoutBig"
            layout="@layout/small_2_image_layout" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>